{% if maxpages > 1 %}
    <div class="row pt-3 px-4">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item{{ thispage == 1 ? ' disabled' }}">
                    <a aria-label="Próximo" class="page-link" href="{{ path('recipient_index_pagination', {page: thispage-1 < 1 ? 1 : thispage-1}) }}">«</a>
                </li>
                <li class="page-item{{ thispage == maxpages ? ' disabled' }}">
                    <a aria-label="Anterior" class="page-link" href="{{ path('recipient_index_pagination', {page: thispage+1 <= maxpages ? thispage+1 : thispage}) }}">»</a>
                </li>
            </ul>
        </nav>
    </div>
{% endif %}