{% extends 'base.html.twig' %}

{% block body %}
    <h2>Editando Tópico</h2>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" class="btn btn-primary" value="Editar" />
    {{ form_end(edit_form) }}

    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <a class="btn btn-default" href="{{ path('subscription_index') }}">Voltar</a>
        </li>
        <li class="list-group-item">
            {{ form_start(delete_form) }}
                <input type="submit" value="Excluir" class="btn btn-danger" id="btn-excluir">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#btn-excluir').click(function(e){
               if(!confirm('Deseja realmente excluir este tópico? Todos os bounces relacionados à ele também serão excluídos.'))
               {
                   e.preventDefault();
               }
            });
        });
    </script>
{% endblock %}